{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intellidbgkit/contracts/tool-card.schema.json",
  "title": "ToolCard",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tool_id",
    "category",
    "description",
    "examples",
    "help_command",
    "risk_level",
    "adapter",
    "status"
  ],
  "properties": {
    "tool_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]*$"
    },
    "category": {
      "type": "string",
      "enum": [
        "collector",
        "analyzer",
        "actuator",
        "workflow",
        "support"
      ]
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "examples": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "help_command": {
      "type": "string",
      "minLength": 1
    },
    "input_schema_ref": {
      "type": "string",
      "minLength": 1
    },
    "output_schema_ref": {
      "type": "string",
      "minLength": 1
    },
    "risk_level": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "adapter": {
      "type": "string",
      "minLength": 1
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "healthy",
        "degraded",
        "blocked"
      ]
    },
    "health_reason": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
