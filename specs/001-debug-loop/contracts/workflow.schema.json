{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intellidbgkit/contracts/workflow.schema.json",
  "title": "WorkflowDefinition",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "workflow_id",
    "version",
    "name",
    "trigger",
    "steps",
    "outputs",
    "core_boundary_policy"
  ],
  "properties": {
    "workflow_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "trigger": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "value"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "manual",
            "event",
            "schedule",
            "policy"
          ]
        },
        "value": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "step_id",
          "name",
          "plugin_ref",
          "action"
        ],
        "properties": {
          "step_id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "plugin_ref": {
            "type": "string",
            "minLength": 1
          },
          "action": {
            "type": "string",
            "minLength": 1
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "guards": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "on_block": {
            "type": "string",
            "enum": [
              "halt",
              "observe-more",
              "fallback"
            ]
          }
        }
      }
    },
    "guards": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "guard_id",
          "expression",
          "on_block",
          "reason"
        ],
        "properties": {
          "guard_id": {
            "type": "string",
            "minLength": 1
          },
          "expression": {
            "type": "string",
            "minLength": 1
          },
          "on_block": {
            "type": "string",
            "enum": [
              "halt",
              "observe-more",
              "fallback"
            ]
          },
          "reason": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "outputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "core_boundary_policy": {
      "type": "string",
      "enum": [
        "event-bus-only"
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
